<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"     xmlns:app="http://schemas.android.com/apk/res-auto"     xmlns:tools="http://schemas.android.com/tools"     android:layout_width="match_parent" 
     android:orientation="vertical"     android:layout_height="match_parent"     tools:context=".MainActivity"> 
    <TextView 
        android:layout_width="wrap_content"         android:layout_height="wrap_content"         android:text="Student Detail"         android:layout_marginRight="5dp"         android:textSize="9pt"         android:layout_marginLeft="50pt"         android:textColor="#000000"         android:layout_marginTop="20pt" 
        app:layout_constraintBottom_toBottomOf="parent"         app:layout_constraintLeft_toLeftOf="parent"         app:layout_constraintRight_toRightOf="parent" /> 
    <LinearLayout 
        android:layout_width="wrap_content"         android:layout_height="wrap_content"         android:layout_marginTop="20pt"         android:orientation="horizontal"> 
        <TextView 
            android:layout_width="wrap_content"             android:layout_height="wrap_content"             android:text="Enter enrollment:"             android:layout_marginRight="2dp"             android:textSize="8pt"             android:layout_marginLeft="5pt"             android:textColor="#000000" 
            app:layout_constraintBottom_toBottomOf="parent"             app:layout_constraintLeft_toLeftOf="parent"             app:layout_constraintRight_toRightOf="parent"             app:layout_constraintTop_toTopOf="parent" /> 
        <EditText 
            android:id="@+id/enroll"             android:layout_width="100pt"             android:layout_height="wrap_content"             android:ems="10" 
            android:inputType="textPersonName"/> 
    </LinearLayout>     <LinearLayout 
        android:layout_width="wrap_content"         android:layout_height="wrap_content"         android:layout_marginTop="10pt"         android:orientation="horizontal"> 
 
        <TextView 
            android:layout_width="wrap_content"             android:layout_height="wrap_content"             android:text="Enter Name:"             android:layout_marginRight="2dp"             android:textSize="8pt"             android:layout_marginLeft="5pt"             android:textColor="#000000" 
            app:layout_constraintBottom_toBottomOf="parent"             app:layout_constraintLeft_toLeftOf="parent"             app:layout_constraintRight_toRightOf="parent"             app:layout_constraintTop_toTopOf="parent" /> 
        <EditText             android:id="@+id/name"             android:layout_width="120pt"             android:layout_height="wrap_content"             android:ems="10" 
            android:inputType="textPersonName"/> 
    </LinearLayout>     <LinearLayout 
        android:layout_width="wrap_content"         android:layout_height="wrap_content"         android:layout_marginTop="10pt"         android:orientation="horizontal"> 
        <TextView 
            android:layout_width="wrap_content"             android:layout_height="wrap_content"             android:text="Enter Marks:"             android:layout_marginRight="5dp"             android:textSize="8pt"             android:layout_marginLeft="5pt"             android:textColor="#000000" 
            app:layout_constraintBottom_toBottomOf="parent"             app:layout_constraintLeft_toLeftOf="parent"             app:layout_constraintRight_toRightOf="parent"             app:layout_constraintTop_toTopOf="parent" /> 
        <EditText 
            android:id="@+id/marks"             android:layout_width="120pt"             android:layout_height="wrap_content"             android:ems="10" 
            android:inputType="textPersonName"/> 
    </LinearLayout>     <LinearLayout 
        android:layout_width="wrap_content"         android:layout_height="wrap_content"         android:layout_marginTop="20pt"         android:layout_marginLeft="30pt"         android:orientation="horizontal"> 
 
        <Button             android:id="@+id/add"             android:layout_width="50pt" 
             android:layout_height="wrap_content"             android:background="#AF2727"             android:text="Add" /> 
 
        <Button             android:id="@+id/delete"             android:layout_width="50pt"             android:layout_height="wrap_content"             android:layout_marginLeft="20pt"             android:background="#4CAF50"             android:text="Delete" /> 
    </LinearLayout>     <LinearLayout 
        android:layout_width="wrap_content"         android:layout_height="wrap_content"         android:layout_marginTop="20pt"         android:layout_marginLeft="30pt"         android:orientation="horizontal"> 
        <Button 
            android:layout_width="50pt"             android:layout_height="wrap_content"             android:text="Modify"             android:background="#FF9473"             android:id="@+id/modify"/> 
 
        <Button             android:id="@+id/view"             android:layout_width="50pt"             android:layout_height="wrap_content"             android:layout_marginLeft="20pt"             android:background="#3F51B5"             android:text="View" /> 
    </LinearLayout>     <LinearLayout 
        android:layout_width="wrap_content"         android:layout_height="wrap_content"         android:layout_marginTop="20pt"         android:layout_marginLeft="30pt"         android:orientation="horizontal"> 
        <Button 
            android:layout_width="50pt"             android:layout_height="wrap_content"             android:text="View All"             android:background="#9FE166"             android:id="@+id/viewAll"/> 
 
        <Button 
            android:layout_width="50pt"             android:layout_height="wrap_content"             android:id="@+id/show"             android:background="#9BAFE4"             android:layout_marginLeft="20pt"             android:text="show"/> 
    </LinearLayout> 
</LinearLayout> 
